
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        
        <div class="panel-heading">
         <h3 class="panel-title"><strong> <%= current_user.all_friends.count %></strong>位朋友</h3>
        </div>

        <div class="panel-body">
          <% @all_friends.each do |friend| %>
            <div class="my-friend">
                <!-- <%= image_tag friend.avatar, class: "img-circle", size: "50" %> -->
                <img src="http://via.placeholder.com/128x128" class="img-rounded">
              <p class="text-primary inline"><%= friend.name %></p>
            </div>
          <% end %>
        </div>
     
      </div>

    </div>
  </div>
</div>
