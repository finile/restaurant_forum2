<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container"> 
      <a class="navbar-brand" href="#">餐廳評論網後台</a>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#"><%= link_to 'New Restaurant', new_admin_restaurant_path %>
              <span class="sr-only">(current)</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>


 <!-- Page Content -->
  <div class="container">

    <!-- Page Heading -->
      <h1 class="my-4">Page Heading
        <small>Secondary Text</small>
      </h1>

        <div>
          <%= link_to 'Restaurant', admin_restaurants_path %> |
          <%= link_to 'Categories', admin_categories_path %>
        </div>
        


    <div class="row">
      <% @restaurants.each do |restaurant| %>
        <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
          <div class="card h-100">
            <a href="#"><%= image_tag restaurant.image, size:"700x400", class: "img-thumbnail" %></a>
            <div class="card-body">
              <h4 class="card-title">
                <a href="#"><%= restaurant.name %></a>
              </h4>
              <h4 class="card-title">
                <a href="#"><%= restaurant.category.name %></a>
              </h4>
              <p class="card-text"><%= simple_format(restaurant.description) %></p>
              <h4 class="card-title">
                <a href="#"><%= link_to 'Show', admin_restaurant_path(restaurant) %></a>
              </h4>
              <h4 class="card-title">
                <a href="#"><%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %></a>
              </h4>
              <h4 class="card-title">
                <a href="#"><%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: {confirm:"Are you sure?"} %></a>
              </h4>
            </div>
          </div>
        </div>
        <% end %>
        </div>
    </div>

    <ul class="pagination justify-content-center">
     <%= paginate @restaurants %>
    </ul>

  </div>

  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
    </div>
  </footer>

</body>